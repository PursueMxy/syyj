<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.HomeActivity">
    <com.zhkj.syyj.CustView.MyViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></com.zhkj.syyj.CustView.MyViewPager>
    <TextView
        android:background="@color/text_fdfdfd"
        android:layout_width="match_parent"
        android:layout_height="0.3dp" />
    <com.chaychan.library.BottomBarLayout
        android:id="@+id/home_bottombarly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="center">
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:itemText="首页"
            app:iconNormal="@mipmap/icon_bottomitem_nohome"
            app:iconSelected="@mipmap/icon_bottomitem_home"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color"
            app:itemTextSize="8sp"
            app:itemMarginTop="3dp"></com.chaychan.library.BottomBarItem>
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/home_bottomitem_shop"
            app:iconSelected="@mipmap/home_bottomitem_noshop"
            app:itemText="商城"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color"
            app:itemTextSize="8sp"
            app:itemMarginTop="3dp"></com.chaychan.library.BottomBarItem>
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/home_bottomitem_task"
            app:iconSelected="@mipmap/home_bottomitem_notask"
            app:itemText="任务"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color"
            app:itemTextSize="8sp"
            app:itemMarginTop="3dp"></com.chaychan.library.BottomBarItem>
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/home_bottomitem_shopcart"
            app:iconSelected="@mipmap/home_bottomitem_noshopcart"
            app:itemText="购物车"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color"
            app:itemTextSize="8sp"
            app:itemMarginTop="3dp"></com.chaychan.library.BottomBarItem>
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/home_bottomitem_min"
            app:iconSelected="@mipmap/home_bottomitem_nomin"
            app:itemText="我的"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color"
            app:itemTextSize="8sp"
            app:itemMarginTop="3dp"></com.chaychan.library.BottomBarItem>
    </com.chaychan.library.BottomBarLayout>
</LinearLayout>