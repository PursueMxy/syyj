<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.SetActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/set_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:id="@+id/set_b_title"
            android:layout_centerHorizontal="true"
            android:text="系统设置"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_45"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/btn_top_white"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/set_rl_user"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:textColor="#ff040000"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_14" />

        </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/text_fdfdfd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:id="@+id/set_rl_clean_cache"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:textColor="#ff040000"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/set_tv_clean_cache"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0M"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_14" />

        </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/text_fdfdfd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:id="@+id/set_rl_version"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号"
                android:textColor="#ff040000"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/set_tv_versionName"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_14" />

        </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/text_fdfdfd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/set_btn_out_login"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_login"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_40"
                android:text="退出登录"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>