<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".Activitys.PerSonalDataActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:src="@mipmap/icon_arrow_left"
            android:id="@+id/personal_data_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="个人信息"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/btn_top_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_148">
            <com.zhkj.syyj.CustView.CircleImageView
                android:id="@+id/personal_data_img_head"
                android:src="@mipmap/spyj_logo"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_130" />
            
            <ImageView
                android:id="@+id/personal_data_img_edt_head"
                android:src="@mipmap/icon_edt_yellow"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16" />
        </RelativeLayout>

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人主页"
            android:textColor="#ff040000"
            android:textSize="@dimen/sp_17"
            />
        <RelativeLayout
            android:id="@+id/personal_data_tv_user"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="个人信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>
            
             <ImageView
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="@dimen/dp_15"
                 android:layout_marginRight="@dimen/dp_15"
                 android:layout_alignParentRight="true"
                 android:src="@mipmap/icon_next"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
            android:id="@+id/personal_data_rl_change_psw"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
            android:id="@+id/personal_date_rl_update_mobile"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="修改手机"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/personal_data_tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff949397"
                android:textSize="14sp"
                android:layout_marginRight="@dimen/dp_30"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
    </LinearLayout>
</LinearLayout>