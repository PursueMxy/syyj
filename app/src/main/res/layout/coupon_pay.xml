<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            />
        <ImageView
            android:id="@+id/coupon_pay_img_dlt"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/coupon_pay_rl_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/ic_user_money"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="余额支付"
                android:textColor="#ff0a0a0a"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:id="@+id/coupon_pay_img_balance"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_slt_pay"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>
        </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/bg_e6e6e6"/>
        <RelativeLayout
            android:id="@+id/coupon_pay_rl_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/ic_alipay"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支付宝支付"
                android:textColor="#ff0a0a0a"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:id="@+id/coupon_pay_img_alipay"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_no_pay"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>
        </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/bg_e6e6e6"/>
        <RelativeLayout
            android:id="@+id/coupon_pay_rl_wechatpay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/ic_wechat_pay"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="微信支付"
                android:textColor="#ff0a0a0a"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:id="@+id/coupon_pay_img_wechat"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_no_pay"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>
        </RelativeLayout>
    <Button
        android:id="@+id/coupon_pay_btn_pay"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="立即支付"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"/>
</LinearLayout>
