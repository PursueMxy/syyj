<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:id="@+id/list_collect_item_img_slt"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_round"/>

    <ImageView
        android:id="@+id/list_collect_item_img"
        android:layout_toRightOf="@+id/list_collect_item_img_slt"
         android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/icon_home_rel"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_87" />
    <TextView
        android:layout_alignTop="@+id/list_collect_item_img"
        android:layout_toRightOf="@+id/list_collect_item_img"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称......"
        android:textColor="#ff040000"
        android:textSize="14sp"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/list_collect_item_tv_content"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_44" />

    <TextView
        android:id="@+id/list_collect_item_tv_spec_key_name"
        android:layout_below="@+id/list_collect_item_tv_content"
        android:layout_toRightOf="@+id/list_collect_item_img"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text=""
        android:textColor="#ff949397"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/list_collect_item_tv_price"
        android:layout_toRightOf="@+id/list_collect_item_img"
        android:layout_alignBottom="@+id/list_collect_item_img"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="¥ 0.00"
        android:textColor="#ffefb134"
        android:textSize="14sp"
        />
</RelativeLayout>
