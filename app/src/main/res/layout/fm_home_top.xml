<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/home_img_logo_name"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/icon_logo_name"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_37" />
        <RelativeLayout
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_search"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/home_img_logo_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37">
            <EditText
                android:textColor="#ff949397"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_search"
                android:gravity="center|left"
                android:hint="请输入搜索内容"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>

    <com.yyydjk.library.BannerLayout
        android:id="@+id/fm_home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_201"
        app:autoPlayDuration="5000"
        app:indicatorMargin="@dimen/dp_15"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="5dp"
        app:scrollDuration="1100"
        app:selectedIndicatorColor="@color/text_efb134"
        app:selectedIndicatorHeight="7dp"
        app:selectedIndicatorWidth="7dp"
        app:unSelectedIndicatorColor="@color/white"
        app:unSelectedIndicatorHeight="7dp"
        app:unSelectedIndicatorWidth="7dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="资讯精选"
            android:textColor="#ff040000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/fmhome_tv_information_choice"
            android:gravity="center"
            android:text="更多  ➞"
            android:layout_centerVertical="true"
            android:textColor="#ffefb134"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fmhome_rl_information_choice"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110">
        <ImageView
            android:id="@+id/home_choice_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_107"
            android:layout_height="@dimen/dp_90" />
        <TextView
            android:id="@+id/home_choice_tv_title"
            android:layout_alignTop="@+id/home_choice_img"
            android:text="金价飙涨吸引各路资金涌入金价飙涨吸引各路资金涌入"
            android:textColor="#ff040000"
            android:textSize="14sp"
            android:lines="2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/home_choice_img"
            android:layout_width="@dimen/dp_193"
            android:layout_height="@dimen/dp_48" />
        <TextView
            android:id="@+id/home_choice_tv_title_description"
            android:layout_below="@+id/home_choice_tv_title"
            android:text="自今年5月以来，随着全球金价快速上涨并创下6年新高"
            android:textColor="#ff949397"
            android:textSize="12sp"
            android:lines="2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/home_choice_img"
            android:layout_width="@dimen/dp_193"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="盈利任务"
            android:textColor="#ff040000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/fmhome_rl_tv_task_lists"
            android:gravity="center"
            android:text="更多  ➞"
            android:layout_centerVertical="true"
            android:textColor="#ffefb134"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.zhkj.syyj.CustView.NoScrollListView
        android:divider="#F9F9F9"
        android:background="@color/text_white"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/home_task_list"
        android:scrollbars="none"
        android:dividerHeight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_215"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品精选"
            android:textColor="#ff040000"
            android:textSize="20sp"/>
        <TextView
            android:gravity="center"
            android:text="更多  ➞"
            android:layout_centerVertical="true"
            android:textColor="#ffefb134"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
