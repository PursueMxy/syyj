<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/goods_type_tv_size"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规格："
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_12"
        />
    <com.zhkj.syyj.CustView.LabelsView
        android:layout_below="@+id/goods_type_tv_size"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:id="@+id/goods_type_labels"
        app:labelBackground="@drawable/label_bg"
        app:labelTextColor="@drawable/label_text"
        app:labelTextSize="@dimen/sp_14"
        app:labelTextPaddingBottom="@dimen/dp_7"
        app:labelTextPaddingLeft="@dimen/dp_15"
        app:labelTextPaddingRight="@dimen/dp_15"
        app:labelTextPaddingTop="@dimen/dp_7"
        app:wordMargin="@dimen/dp_10"
        app:selectType="SINGLE"
        app:maxLines="0"
        app:minSelect="1"
        android:layout_marginBottom="@dimen/dp_5"
        />
</RelativeLayout>
