<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.CashOutActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:id="@+id/cash_out_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="余额提现"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前余额：￥36.00"
            android:textColor="#ff040000"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_white"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="金额提现"
            android:textColor="#ff040000"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/cash_out_edt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@null"
            android:hint="请输入提现金额"
            android:inputType="number" />
        <View
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#ffefb134"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>

        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textColor="#ff040000"
            android:textSize="14sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cash_out_cb_wechatPay"
                style="@style/MyCheckBox"
                android:checked="true"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:text="微信支付"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cash_out_cb_alipay"
                style="@style/MyCheckBox"
                android:checked="false"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:text="支付宝支付"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/cash_out_btn_confirm"
        android:background="@drawable/btn_yellow"
        android:layout_marginTop="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:text="确认"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />
</LinearLayout>