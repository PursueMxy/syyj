<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/list_evaluate_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/list_evaluate_img"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/icon_integral_item"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_87" />
        <TextView
            android:id="@+id/list_evaluate_tv_title"
            android:layout_toRightOf="@+id/list_evaluate_img"
            android:lines="2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称......"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/list_evaluate_tv_sn"
            android:layout_toRightOf="@+id/list_evaluate_img"
            android:layout_marginTop="@dimen/dp_56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30ml /绿色"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:layout_below="@+id/list_evaluate_tv_sn"
            android:id="@+id/list_evaluate_tv_price"
            android:layout_toRightOf="@+id/list_evaluate_img"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 23.00"
            android:textColor="@color/text_efb134"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/list_evaluate_rl_two"
        android:layout_below="@+id/list_evaluate_rl_top"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61">
        <RadioGroup
            android:id="@+id/list_evaluate_radioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_gravity="center"
                android:textSize="@dimen/sp_14"
                android:id="@+id/list_evaluate_radioBtn_praise"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="好评"
                style="@style/EvaluateCheck"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_gravity="center"
                android:textSize="@dimen/sp_14"
                android:id="@+id/list_evaluate_radioBtn_middle"
                style="@style/EvaluateCheck"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_50"
                android:text="中评"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_gravity="center"
                android:textSize="@dimen/sp_14"
                android:id="@+id/list_evaluate_radioBtn_difference"
                style="@style/EvaluateCheck"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_50"
                android:text="差评"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@+id/list_evaluate_rl_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/bg_e6e6e6"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_1"
        android:layout_below="@+id/list_evaluate_rl_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/white">
    <EditText
        android:padding="@dimen/dp_3"
        android:inputType="text"
        android:id="@+id/list_evaluate_edt_content"
        android:textSize="@dimen/sp_14"
        android:gravity="center|left|top"
        android:hint="请输入评价内容"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"/>
    </RelativeLayout>
</RelativeLayout>
