<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".Activitys.UpdateUserActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:src="@mipmap/icon_arrow_left"
            android:id="@+id/update_user_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="个人信息"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35" />

            <TextView
                android:id="@+id/update_user_tv_confirm"
                android:text="完成"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/btn_top_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_148">
            <com.zhkj.syyj.CustView.CircleImageView
                android:id="@+id/update_user_img_head"
                android:src="@mipmap/spyj_logo"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_130" />

        </RelativeLayout>

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击修改头像"
            android:textColor="#ff949397"
            android:textSize="@dimen/sp_17"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="用户ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>

              <EditText
                  android:id="@+id/up_user_edt_userId"
                  android:textSize="@dimen/sp_14"
                  android:layout_marginLeft="@dimen/dp_77"
                  android:hint="请输入信息"
                  android:background="@null"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="昵称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>

            <EditText
                android:id="@+id/up_user_edt_userName"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_77"
                android:hint="请输入昵称"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>

               <RadioGroup
                   android:id="@+id/up_user_radioGroup"
                   android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/dp_77"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <RadioButton
                       android:id="@+id/up_user_radioBtn_man"
                       style="@style/MyCheckBox"
                       android:paddingLeft="@dimen/dp_10"
                       android:text="男"
                       android:checked="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <RadioButton
                       android:id="@+id/up_user_radioBtn_girl"
                       style="@style/MyCheckBox"
                       android:paddingLeft="@dimen/dp_10"
                       android:layout_marginLeft="@dimen/dp_30"
                       android:text="女"
                       android:checked="false"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RadioGroup>

        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="生日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/up_user_tv_birthday"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_77"
                android:hint="请选择生日"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="城市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/up_user_tv_address"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_77"
                android:hint="请选择城市"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="职业"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"/>

            <EditText
                android:id="@+id/up_user_edt_vocation"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_77"
                android:hint="请输入职业"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>
        <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="微信号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff040000"
            android:textSize="@dimen/sp_14"/>

            <EditText
                android:id="@+id/up_user_edt_wechatNumber"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_77"
                android:hint="请输入微信号"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"></View>



    </LinearLayout>
</LinearLayout>