<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ShoppingAddressUpdateActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/shopping_address_update_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="编辑收货地址"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_45"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/btn_top_white"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_9"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:text="姓名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/shopping_address_update_edt_consignee"
                android:gravity="center|right"
                android:layout_centerVertical="true"
                android:hint="请输入收货人姓名"
                android:background="@null"
                android:layout_marginRight="@dimen/dp_14"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_9"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:text="手机号码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/shopping_address_update_edt_mobile"
                android:gravity="center|right"
                android:layout_centerVertical="true"
                android:hint="请输入手机号码"
                android:background="@null"
                android:inputType="number"
                android:layout_marginRight="@dimen/dp_14"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_9"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:text="邮政编码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/shopping_address_update_edt_zipcode"
                android:gravity="center|right"
                android:layout_centerVertical="true"
                android:hint="请输入邮政编码"
                android:textSize="@dimen/sp_14"
                android:background="@null"
                android:layout_marginRight="@dimen/dp_14"
                android:textColor="#ff949397"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_9"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:text="所在区域："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shopping_address_up_tv_city"
                android:gravity="center|right"
                android:layout_centerVertical="true"
                android:hint="请选择所在地址"
                android:layout_marginRight="@dimen/dp_14"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_9"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:text="详细地址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/shopping_address_update_edt_deladdress"
            android:gravity="center|right"
            android:layout_centerVertical="true"
            android:hint="请输入详细地址"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#ff949397"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>

        <CheckBox
            android:id="@+id/shopping_address_update_cb_default"
            android:paddingLeft="@dimen/dp_10"
            style="@style/MyCheckBox"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"
            android:text="设为默认"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/shopping_address_update_btn_confirm"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/btn_yellow"
            android:text="保 存"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_203"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44" />
    </LinearLayout>
</RelativeLayout>