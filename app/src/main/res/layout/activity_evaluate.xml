<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.EvaluateActivity">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:src="@mipmap/icon_arrow_left"
            android:id="@+id/evaluate_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="发表评价"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35" />
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="@dimen/dp_49"
        android:layout_above="@+id/evaluate_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <com.zhkj.syyj.CustView.NoScrollListView
       android:layout_marginBottom="@dimen/dp_5"
       android:dividerHeight="@dimen/dp_20"
       android:id="@+id/evaluate_listview"
       android:divider="@color/bg_fafafa"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
    </ScrollView>
   <Button
       android:id="@+id/evaluate_btn_confirm"
       android:background="@drawable/btn_login"
       android:textSize="@dimen/sp_14"
       android:textColor="@color/white"
       android:text="提交"
       android:layout_marginLeft="@dimen/dp_40"
       android:layout_marginRight="@dimen/dp_40"
       android:layout_marginBottom="@dimen/dp_40"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_44"/>
</RelativeLayout>