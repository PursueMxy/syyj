<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_goods_img"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/icon_integral_item"
        android:layout_width="@dimen/dp_102"
        android:layout_height="@dimen/dp_87" />
    <TextView
        android:id="@+id/list_goods_tv_title"
        android:layout_toRightOf="@+id/list_goods_img"
        android:lines="2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称......"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/list_goods_tv_sn"
        android:layout_toRightOf="@+id/list_goods_img"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30ml /绿色"
        android:textColor="@color/text_949397"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:layout_below="@+id/list_goods_tv_sn"
        android:id="@+id/list_goods_tv_price"
        android:layout_toRightOf="@+id/list_goods_img"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 23.00"
        android:textColor="@color/text_efb134"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:layout_below="@+id/list_goods_tv_sn"
        android:id="@+id/list_goods_tv_num"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_12"
        />
</RelativeLayout>
