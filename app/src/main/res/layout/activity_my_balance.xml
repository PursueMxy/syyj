<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.MyBalanceActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:id="@+id/my_balance_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="我的余额"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_274">
        <ImageView
            android:id="@+id/my_balance_img"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_mybalance"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_148" />

        <TextView
            android:id="@+id/my_balance_tv_pursue"
            android:layout_below="@+id/my_balance_img"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="余额：￥0.00"
            android:textColor="#ffefb134"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/my_balance_btn_cash_out"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@+id/my_balance_tv_pursue"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@drawable/btn_enroll"
            android:text="提现"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/my_balance_btn_recharge"
            android:layout_marginLeft="@dimen/dp_190"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_below="@+id/my_balance_tv_pursue"
            android:background="@drawable/btn_yellow"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="充值"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_36" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_33"
        android:background="@drawable/bg_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="余额明细"
            android:textColor="#ff040000"
            android:textSize="16sp"
            />
        <TextView
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp" />
        <ListView

            android:background="@color/white"
            android:scrollbars="none"
            android:id="@+id/my_balance_list"
            android:dividerHeight="0.3dp"
            android:divider="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>