<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/list_evaluate_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/list_goods_img"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/icon_integral_item"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_87" />
        <TextView
            android:id="@+id/list_goods_tv_title"
            android:layout_toRightOf="@+id/list_goods_img"
            android:lines="2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称......"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/list_goods_tv_sn"
            android:layout_toRightOf="@+id/list_goods_img"
            android:layout_marginTop="@dimen/dp_56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30ml /绿色"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:layout_below="@+id/list_goods_tv_sn"
            android:id="@+id/list_goods_tv_price"
            android:layout_toRightOf="@+id/list_goods_img"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 23.00"
            android:textColor="@color/text_efb134"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/list_evaluate_rl_two"
        android:layout_below="@+id/list_evaluate_rl_top"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61">
        <TextView
            android:drawablePadding="@dimen/dp_10"
            android:id="@+id/evaluate_tv_praise"
            android:layout_marginLeft="@dimen/dp_40"
            android:gravity="center"
            android:drawableLeft="@mipmap/icon_slt_evaluate"
            android:text="好评"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:drawablePadding="@dimen/dp_10"
            android:layout_toRightOf="@+id/evaluate_tv_praise"
            android:id="@+id/evaluate_tv_middle"
            android:layout_marginLeft="@dimen/dp_45"
            android:gravity="center"
            android:drawableLeft="@mipmap/icon_no_evaluate"
            android:text="中评"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/evaluate_tv_difference"
            android:drawablePadding="@dimen/dp_10"
            android:layout_toRightOf="@+id/evaluate_tv_middle"
            android:layout_marginLeft="@dimen/dp_45"
            android:gravity="center"
            android:drawableLeft="@mipmap/icon_no_evaluate"
            android:text="差评"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/list_evaluate_rl_two"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_97">
        <EditText
            android:id="@+id/evaluate_tv_evaluate"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_949397"
            android:hint="请写下您的评价"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
