<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_fm_shop_img"
        android:src="@mipmap/icon_home_rel"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_90" />
    <TextView
        android:id="@+id/list_fm_shop_tv_content"
        android:layout_alignTop="@+id/list_fm_shop_img"
        android:text="任务内容文案任务内容文案任务内容文案任务内容文案任......"
        android:textColor="#ff040000"
        android:textSize="14sp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/list_fm_shop_img"
        android:layout_width="@dimen/dp_193"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_fm_shop_tv_price"
        android:layout_alignBottom="@+id/list_fm_shop_img"
        android:text="¥ 23.00"
        android:textColor="#ffefb134"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/list_fm_shop_img"
        android:layout_width="@dimen/dp_193"
        android:layout_height="wrap_content" />
</RelativeLayout>
