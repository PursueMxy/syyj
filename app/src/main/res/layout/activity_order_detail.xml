<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.OrderDetailActivity">
    <RelativeLayout
        android:id="@+id/order_detail_rl_one"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/order_detail_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="订单详情"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
     <RelativeLayout
         android:layout_below="@+id/order_detail_rl_one"
         android:id="@+id/order_detail_rl_two"
         android:background="@color/colorPrimaryDark"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/order_detail_tv_type"
             android:drawablePadding="@dimen/dp_10"
             android:layout_centerInParent="true"
             android:drawableLeft="@mipmap/icon_wait_payment"
             android:gravity="center"
             android:layout_marginTop="@dimen/dp_15"
             android:layout_marginBottom="@dimen/dp_15"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="等待付款"
             android:textColor="#ffffffff"
             android:textSize="@dimen/sp_16"
             />
     </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/order_detail_rl_two"
        android:layout_above="@+id/order_detail_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/order_detail_rl_logistics"
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88">
        <TextView
            android:id="@+id/order_detail_tv_logistics"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_logistigs"
            android:text="物流信息"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_detail_tv_expressTime"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_43"
            android:layout_below="@+id/order_detail_tv_logistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017-05-01 16:01"
            android:textColor="#ff949397"
            android:textSize="12sp"
            />
        <ImageView
            android:src="@mipmap/icon_next"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88">
        <TextView
            android:id="@+id/order_detail_tv_consignee"
            android:text=""
            android:drawableLeft="@mipmap/icon_min_location"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_detail_tv_address"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_34"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品信息"
                android:textColor="#ff040000"
                android:textSize="16sp"
                />

            <com.zhkj.syyj.CustView.NoScrollListView
                android:id="@+id/order_detail_noScrollListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单信息"
                android:textColor="#ff040000"
                android:textSize="16sp"
                />

             <LinearLayout
                 android:orientation="vertical"
                 android:layout_marginTop="@dimen/dp_20"
                 android:background="@drawable/bg_white"
                 android:layout_marginLeft="@dimen/dp_15"
                 android:layout_marginRight="@dimen/dp_15"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_195">
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:layout_margin="@dimen/dp_10"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="运费："
                         android:textColor="#ff040000"
                         android:textSize="14sp"
                         />
                     <TextView
                         android:id="@+id/order_detail_tv_freight"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/dp_81"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="￥00.00"
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         />
                 </RelativeLayout>
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:layout_margin="@dimen/dp_10"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="优惠券："
                         android:textColor="#ff040000"
                         android:textSize="14sp"
                         />
                     <TextView
                         android:id="@+id/order_detail_tv_coupon"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/dp_81"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="￥00.00"
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         />
                 </RelativeLayout>
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:layout_margin="@dimen/dp_10"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="订单编号："
                         android:textColor="#ff040000"
                         android:textSize="14sp"
                         />
                     <TextView
                         android:id="@+id/order_detail_tv_orderNumber"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/dp_81"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="￥00.00"
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         />
                 </RelativeLayout>
                 <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:layout_margin="@dimen/dp_10"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="提交时间："
                     android:textColor="#ff040000"
                     android:textSize="14sp"
                     />
                 <TextView
                     android:id="@+id/order_detail_tv_confirmTime"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="@dimen/dp_81"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="￥00.00"
                     android:textColor="#ff949397"
                     android:textSize="12sp"
                     />
             </RelativeLayout>
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:layout_margin="@dimen/dp_10"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="支付方式："
                         android:textColor="#ff040000"
                         android:textSize="14sp"
                         />
                     <TextView
                         android:id="@+id/order_detail_tv_payType"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="@dimen/dp_81"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text=""
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         />
                 </RelativeLayout>
             </LinearLayout>

            <RelativeLayout
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/bg_white"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42">
                <TextView
                    android:id="@+id/order_detail_sphj"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品合计："
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/order_detail_tv_goodsPrice"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/order_detail_sphj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¥198.00"
                    android:textColor="#ffefb134"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/order_detail_rl_bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_0"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66">
        <Button
            android:id="@+id/order_detail_btn_three"
            android:background="@drawable/btn_yellow"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:text="立即付款"
            android:layout_width="@dimen/dp_93"
            android:layout_height="@dimen/dp_40" />



        <Button
            android:id="@+id/order_detail_btn_two"
            android:background="@drawable/btn_enroll"
            android:layout_marginRight="@dimen/dp_114"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_949397"
            android:text="取消订单"
            android:layout_width="@dimen/dp_93"
            android:layout_height="@dimen/dp_40" />


        <Button
            android:id="@+id/order_detail_btn_one"
            android:background="@drawable/btn_enroll"
            android:layout_marginRight="@dimen/dp_217"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_949397"
            android:text="查看物流"
            android:layout_width="@dimen/dp_93"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
</RelativeLayout>