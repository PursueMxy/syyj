<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.NewsActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/news_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="消息中心"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_45"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/btn_top_white"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/news_img_online"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/icon_online_services"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21" />

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@+id/news_img_online"
                android:text="在线客服"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@+id/news_img_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看与客服的沟通记录"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_12"
                />

            <ImageView
                android:layout_marginRight="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>


        <RelativeLayout
            android:id="@+id/news_rl_services_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/news_img_message"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/icon_services_message"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21" />

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@+id/news_img_message"
                android:text="服务消息"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@+id/news_img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您有1张优惠券到账了"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_12"
                />

            <ImageView
                android:layout_marginRight="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>

        <RelativeLayout
            android:id="@+id/news_rl_system_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/news_img_system"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/icon_system_services"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21" />

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@+id/news_img_system"
                android:text="系统消息"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@+id/news_img_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒杀专区暂时下线公告"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_12"
                />

            <ImageView
                android:layout_marginRight="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLineDefault"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </LinearLayout>
</RelativeLayout>