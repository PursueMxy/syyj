<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fafafa"
    tools:context=".Activitys.PlaceOrderIntegralActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/place_order_integral_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="提交订单"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:id="@+id/view_colorPrimaryDark"
        android:layout_marginTop="@dimen/top_high"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_above="@+id/place_order_integral_bottom"
        android:layout_below="@+id/view_colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/bg_fafafa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品信息"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/place_order_integral_img"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dp_10"
                android:src="@mipmap/icon_integral_item"
                android:layout_width="@dimen/dp_102"
                android:layout_height="@dimen/dp_87" />
            <TextView
                android:id="@+id/place_order_integral_tv_title"
                android:layout_toRightOf="@+id/place_order_integral_img"
                android:lines="2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/place_order_integral_tv_sn"
                android:layout_toRightOf="@+id/place_order_integral_img"
                android:layout_marginTop="@dimen/dp_56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_949397"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:layout_below="@+id/place_order_integral_tv_sn"
                android:id="@+id/place_order_integral_tv_price"
                android:layout_toRightOf="@+id/place_order_integral_img"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_efb134"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_below="@+id/place_order_integral_tv_sn"
                android:id="@+id/place_order_integral_tv_num"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="运费"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/place_order_integral_tv_freight"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="¥0.00"
                android:textColor="@color/text_949397"
                android:textSize="@dimen/sp_12"
                />
            <ImageView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_next"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家留言"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            />

        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">

            <EditText
                android:id="@+id/place_order_integral_edt_message"
                android:background="@null"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="留下你要对商家说的话"
                android:textColor="@color/text_949397"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/place_order_integral_rl_address"
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@mipmap/icon_min_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/place_order_integral_tv_contracts"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大梨 180****1849 "
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/place_order_integral_tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_default"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:text="默认"
            android:textColor="@color/text_efb134"
            android:textSize="@dimen/sp_14" />

        <TextView

            android:layout_alignParentBottom="true"
            android:id="@+id/place_order_integral_tv_address"
            android:layout_marginBottom="@dimen/dp_13"
            android:padding="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_34"
            android:text="XX省XX市XX县XX区XX街道"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/place_order_integral_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/place_order_integral_tv_couponNumber"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300积分"
            android:textColor="@color/text_efb134"
            android:textSize="@dimen/sp_20"
            />

        <Button
            android:id="@+id/place_order_integral_btn_immediate_payment"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="立即支付"
            android:background="@drawable/btn_yellow"
            android:layout_width="@dimen/dp_97"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
</RelativeLayout>