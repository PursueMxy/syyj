<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.AppraiseActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/appraise_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="评论列表"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RadioGroup
        android:background="@color/white"
        android:id="@+id/appraise_radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RadioButton
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_15"
            android:id="@+id/appraise_radiobutton_whole"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_choosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="全部"/>

        <RadioButton
            android:id="@+id/appraise_radiobutton_obligation"
            android:textColor="@color/text_fdfdfd"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="好评"/>
        <RadioButton
            android:id="@+id/appraise_radiobutton_to_bo_shipped"
            android:textColor="@color/text_fdfdfd"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="中评"/>

        <RadioButton
            android:id="@+id/appraise_radiobutton_to_bo_received"
            android:textColor="@color/text_fdfdfd"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/myorder_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="差评"/>
    </RadioGroup>
    <com.zhouyou.recyclerview.XRecyclerView
        android:id="@+id/appraise_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.zhouyou.recyclerview.XRecyclerView>
</LinearLayout>