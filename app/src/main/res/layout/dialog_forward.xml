<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_white"
    android:orientation="vertical">
<RelativeLayout
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@mipmap/forward_wechat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/text_black"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_14"
        android:text="发送到朋友圈"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/icon_forward_fg"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_13"
            android:text="前往微信"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:text="黏贴文案/上传图片"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:text="发布朋友圈"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

      <TextView
          android:id="@+id/dialog_forward_btn_shareToTimeLine"
          android:layout_marginTop="@dimen/dp_20"
          android:drawablePadding="@dimen/dp_10"
          android:drawableTop="@mipmap/icon_wechatcircle"
          android:layout_gravity="center"
          android:text="前往朋友圈"
          android:textSize="@dimen/sp_13"
          android:textColor="@color/text_black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文案已复制，图片已保存到相册"
        android:textColor="@color/text_efb134"
        android:textSize="@dimen/sp_14"
        />

      <View
          android:layout_marginTop="@dimen/dp_11"
          android:background="@color/text_fdfdfd"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"/>

    <Button
        android:id="@+id/dialog_forward_btn_back"
        android:text="取 消"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:background="@drawable/btn_yellow"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />

</LinearLayout>
