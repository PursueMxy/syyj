<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.ReMindActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/remind_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="设置提醒"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_9"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_toLeftOf="@+id/re_mind_img_right"
            android:id="@+id/re_mind_tv_date"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择日期"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            />

        <ImageView
            android:id="@+id/re_mind_img_right"
            android:src="@mipmap/icon_down"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_9"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_toLeftOf="@+id/re_mind_img_time_right"
            android:id="@+id/re_mind_tv_time"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择时间"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            />

        <ImageView
            android:id="@+id/re_mind_img_time_right"
            android:src="@mipmap/icon_down"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提醒内容"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_9"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_166">
        <EditText
            android:id="@+id/re_mind_tv_connect"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入内容"
            android:background="@null"
            android:textColor="@color/text_949397"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/re_mind_btn_define"
        android:background="@drawable/btn_yellow"
        android:gravity="center"
        android:text="确 定"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_114"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />
</LinearLayout>