<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.LogisticsDetailActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/logistics_detail_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="我的订单"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_231">
        <RelativeLayout
            android:background="@mipmap/icon_evaluate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"></RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_170"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61">
            <TextView
                android:id="@+id/logistics_tv_delivery_express"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="@dimen/sp_14"
                android:text="配送快递：顺丰快递"
                android:textColor="@color/text_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/logistics_tv_goodsNum"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="@dimen/sp_14"
                android:text="共  1 件商品"
                android:textColor="@color/text_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="物流详情"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        />

    <TextView
        android:id="@+id/logistics_tv_expressNumber"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="快递单号：2765302256"
        android:textColor="@color/text_fdfdfd"
        android:textSize="@dimen/sp_14"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:scrollbars="none"
            android:dividerHeight="@dimen/dp_0"
            android:id="@+id/logistics_detail_list"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#ededed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </RelativeLayout>
</LinearLayout>