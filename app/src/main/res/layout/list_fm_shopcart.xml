<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/list_fm_shopcart_cb"
          android:layout_marginLeft="@dimen/dp_15"
          android:layout_width="@dimen/dp_16"
          android:layout_height="@dimen/dp_16"
          android:layout_centerVertical="true"
          android:src="@mipmap/icon_round"/>
    
    <ImageView
        android:id="@+id/list_fm_shopcart_img"
        android:layout_toRightOf="@+id/list_fm_shopcart_cb"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/icon_home_rel"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_87" />
    <TextView
        android:layout_alignTop="@+id/list_fm_shopcart_img"
        android:layout_toRightOf="@+id/list_fm_shopcart_img"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称......"
        android:textColor="#ff040000"
        android:textSize="14sp"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/list_fm_shopcart_tv_content"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_44" />

    <TextView
        android:id="@+id/list_fm_shopcart_tv_spec_key_name"
        android:layout_below="@+id/list_fm_shopcart_tv_content"
        android:layout_toRightOf="@+id/list_fm_shopcart_img"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text="30ml /绿色"
        android:textColor="#ff949397"
        android:textSize="12sp"
        />
     <TextView
         android:id="@+id/list_fm_shopcart_tv_price"
         android:layout_toRightOf="@+id/list_fm_shopcart_img"
         android:layout_alignBottom="@+id/list_fm_shopcart_img"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="¥ 23.00"
        android:textColor="#ffefb134"
        android:textSize="14sp"
        />
    <RelativeLayout
         android:layout_marginRight="@dimen/dp_15"
        android:layout_alignBottom="@+id/list_fm_shopcart_img"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_fm_shopcart_tv_lesson"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/cut_off_rule"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/list_fm_shopcart_tv_select_num"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toRightOf="@+id/list_fm_shopcart_tv_lesson"
            android:text="1"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_efb134"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignBottom="@+id/list_fm_shopcart_tv_select_num"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toRightOf="@+id/list_fm_shopcart_tv_lesson"
            android:layout_toLeftOf="@+id/list_fm_shopcart_tv_next"
            android:background="@color/tab_normal_color"
            android:layout_width="@dimen/dp_40"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/list_fm_shopcart_tv_next"
            android:layout_toRightOf="@+id/list_fm_shopcart_tv_select_num"
            android:background="@color/text_efb134"
            android:text="+"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_20" />
    </RelativeLayout>
</RelativeLayout>
