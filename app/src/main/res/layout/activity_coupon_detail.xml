<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.CouponDetailActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/coupon_detail_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="优惠券详情"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_45"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/btn_top_white"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/coupon_tv_title"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="优惠券（优惠券名称）"
            android:textColor="#ff040000"
            android:textSize="@dimen/sp_17"
            />
        <TextView
            android:id="@+id/coupon_tv_content"
            android:layout_marginTop="@dimen/dp_30"
            android:lineSpacingExtra="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:text="使用须知 \n有效期：2019年1月25日-2019年8月17日 \n规则提醒：不可叠加；不可与其他优惠共享；仅限堂食使用，不可外带；酒水饮料，特价菜不参与优惠 \n使用门槛：满30元使用 \n类型：折扣券 抵扣优惠：20元 \n适用商品：XXXXX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/coupon_btn_use"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_556"
        android:background="@drawable/btn_yellow"
        android:text="立即使用"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />
</RelativeLayout>