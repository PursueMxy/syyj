<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.EnrollActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:fitsSystemWindows="true"
                    android:background="@mipmap/login_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_230">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_15"
                        android:layout_marginTop="@dimen/dp_118"
                        android:text="用户注册"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_28"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_175"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_571">
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/login_content"
                        android:orientation="vertical"
                        android:layout_width="@dimen/dp_331"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="手机号码"
                            android:textColor="#ff040000"
                            android:textSize="14sp"
                            />
                        <EditText
                            android:id="@+id/enroll_edt_mobile"
                            android:background="@null"
                            android:hint="请输入手机号码"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:textSize="14sp"
                            android:textColor="#ff949397"
                            android:maxLength="11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginRight="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="#ffe6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp" />

                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="短信验证码"
                            android:textColor="#ff040000"
                            android:textSize="14sp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_toLeftOf="@+id/enroll_send_verification_code"
                                android:id="@+id/enroll_edt_verification_code"
                                android:background="@null"
                                android:hint="请输入验证码"
                                android:layout_marginTop="@dimen/dp_13"
                                android:layout_marginLeft="@dimen/sp_15"
                                android:textSize="14sp"
                                android:textColor="#ff949397"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/enroll_send_verification_code"
                                android:layout_marginTop="@dimen/dp_13"
                                android:textSize="14sp"
                                android:layout_marginRight="@dimen/dp_14"
                                android:text="发送验证码"
                                android:textColor="@color/e99415"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <TextView
                            android:layout_marginRight="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="#ffe6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp" />
                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="密码"
                            android:textColor="#ff040000"
                            android:textSize="14sp"
                            />
                        <EditText
                            android:inputType="textPassword"
                            android:id="@+id/enroll_edt_password"
                            android:background="@null"
                            android:hint="请输入密码"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:textSize="14sp"
                            android:textColor="#ff949397"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginRight="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="#ffe6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp" />
                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="确认密码"
                            android:textColor="#ff040000"
                            android:textSize="14sp"
                            />
                        <EditText
                            android:inputType="textPassword"
                            android:id="@+id/enroll_edt_define_password"
                            android:background="@null"
                            android:hint="请再次输入密码"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:textSize="14sp"
                            android:textColor="#ff949397"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginRight="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="#ffe6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp" />
                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="邀请码"
                            android:textColor="#ff040000"
                            android:textSize="14sp"
                            />
                        <EditText
                            android:id="@+id/enroll_edt_invite_code"
                            android:background="@null"
                            android:hint="请输入邀请码（非必填）"
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:lines="1"
                            android:textSize="14sp"
                            android:textColor="#ff949397"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginRight="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="#ffe6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp" />
                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/sp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="上传图片"
                            android:textColor="#ff040000"
                            android:textSize="14sp"
                            />
                        <RelativeLayout
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/enroll_img_add"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:src="@mipmap/icon_img_add"
                                android:layout_width="@dimen/dp_85"
                                android:layout_height="@dimen/dp_63" />

                            <ImageView
                                android:layout_toRightOf="@+id/enroll_img_add"
                                android:id="@+id/bind_information_img_detail"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:src="@mipmap/ic_as_shown"
                                android:layout_width="@dimen/dp_85"
                                android:layout_height="@dimen/dp_63" />

                            <TextView
                                android:layout_marginTop="@dimen/dp_9"
                                android:layout_below="@+id/enroll_img_add"
                                android:text="上传微信通讯录 联系人数量照片"
                                android:textColor="#ff949397"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_alignLeft="@+id/enroll_img_add"
                                android:layout_alignRight="@+id/enroll_img_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginTop="@dimen/dp_9"
                                android:layout_below="@+id/bind_information_img_detail"
                                android:text="如图所示"
                                android:textColor="#ff949397"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_alignLeft="@+id/bind_information_img_detail"
                                android:layout_alignRight="@+id/bind_information_img_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/enroll_ckb"
                    style="@style/MyCheckBox"
                    android:clickable="true"
                    android:layout_marginLeft="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_764"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="已阅读并同意《用户服务协议》"
                    android:textColor="#ff949397"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <Button
                        android:id="@+id/enroll_btn_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginLeft="@dimen/dp_34"
                        android:layout_marginTop="@dimen/dp_803"
                        android:layout_marginRight="@dimen/dp_34"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@drawable/btn_login"
                        android:text="确  认"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>