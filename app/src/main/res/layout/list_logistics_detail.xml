<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/list_logistics_img"
    android:src="@mipmap/icon_location"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_width="@dimen/dp_28"
    android:layout_height="@dimen/dp_28" />
    <TextView
        android:id="@+id/list_logistics_tv_connect"
        android:text="订单"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/list_logistics_img"
        android:layout_alignTop="@+id/list_logistics_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:layout_below="@+id/list_logistics_tv_connect"
        android:id="@+id/list_logistics_tv_time"
        android:text="2019 09 02 00:00:00"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_fdfdfd"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/list_logistics_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
