<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ChangePasswordActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/change_psw_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="修改密码"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/change_psw_tv_complete"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_45"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/btn_top_white"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旧密码"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"
                />

            <EditText
                android:id="@+id/change_psw_edt_oldPass"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="旧密码"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffe6e6e6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"
                />

            <EditText
                android:id="@+id/change_psw_edt_password"
                android:background="@null"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="请输入新密码（至少6至20位数字或字母）"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffe6e6e6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"
                />

            <EditText
                android:id="@+id/change_psw_edt_affirm_password"
                android:background="@null"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:textColor="#ff949397"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffe6e6e6"/>
    </LinearLayout>
</RelativeLayout>