<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.PlaceOrderActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/place_order_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="提交订单"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:id="@+id/view_colorPrimaryDark"
        android:layout_marginTop="@dimen/top_high"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_above="@+id/place_order_integral_bottom"
        android:layout_below="@+id/view_colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/bg_fafafa"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品信息"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                />
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zhkj.syyj.CustView.NoScrollListView
                    android:id="@+id/place_order_noScrollListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.zhkj.syyj.CustView.NoScrollListView>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:orientation="vertical">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47">
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="优惠券"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:id="@+id/place_order_tv_coupon"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请选择优惠券"
                    android:textColor="@color/text_949397"
                    android:textSize="@dimen/sp_12"
                    />
                <ImageView
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

                <View
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/text_fdfdfd"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47">
                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="运费"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_14"
                        />
                    <TextView
                        android:id="@+id/place_order_tv_freight"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="¥0.00"
                        android:textColor="@color/text_949397"
                        android:textSize="@dimen/sp_12"
                        />
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_next"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                />
            
            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_124">
                <RelativeLayout
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/place_order_cb_balancePay"
                        android:paddingLeft="@dimen/dp_12"
                        android:checked="true"
                        android:gravity="center|left"
                        android:textSize="@dimen/sp_13"
                        style="@style/MyCheckBox"
                        android:text="余额支付"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/text_fdfdfd"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/place_order_cb_wechatPay"
                        android:paddingLeft="@dimen/dp_12"
                        android:checked="false"
                        android:gravity="center|left"
                        android:textSize="@dimen/sp_13"
                        style="@style/MyCheckBox"
                        android:text="微信支付"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/text_fdfdfd"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/place_order_cb_aliPay"
                        android:paddingLeft="@dimen/dp_12"
                        android:checked="false"
                        android:gravity="center|left"
                        android:textSize="@dimen/sp_13"
                        style="@style/MyCheckBox"
                        android:text="支付宝支付"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买家留言"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                />

            <RelativeLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">

                <EditText
                    android:id="@+id/place_order_tv_message"
                    android:background="@null"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="留下你要对商家说的话"
                    android:textColor="@color/text_949397"
                    android:textSize="@dimen/sp_12"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/place_order_rl_address"
        android:background="@drawable/bg_white"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@mipmap/icon_min_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/place_order_tv_contacts"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大梨 180****1849 "
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_default"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:text="默认"
            android:textColor="@color/text_efb134"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/place_order_tv_address"
            android:layout_marginBottom="@dimen/dp_13"
            android:padding="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_34"
            android:text="XX省XX市XX县XX区XX街道"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/place_order_integral_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品合计"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/place_order_tv_price"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 198"
            android:textColor="@color/text_efb134"
            android:textSize="@dimen/sp_20"
            />

        <Button
            android:id="@+id/place_order_btn_immediate_payment"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="立即支付"
            android:background="@drawable/btn_yellow"
            android:layout_width="@dimen/dp_97"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
</RelativeLayout>