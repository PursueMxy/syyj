<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.GoodsDetailActivity">
    <RelativeLayout
        android:id="@+id/goods_detail_table"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/goods_detail_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="商品详情"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/goods_detail_table"
        android:visibility="gone"
        android:id="@+id/goods_detail_ll_suspension"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:id="@+id/goods_detail_suspension_forward"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/myorder_choosed_color"
                android:text="转发卖货"
                android:textColor="@color/text_efb134"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:id="@+id/goods_detail_suspension_appraise"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/myorder_nochoosed_color"
                android:text="评价"
                android:textColor="@color/text_fdfdfd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:id="@+id/goods_detail_suspension_det"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/myorder_nochoosed_color"
                android:text="详情"
                android:textColor="@color/text_fdfdfd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50" />
        </RelativeLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/goods_detail_scrollView"
        android:layout_below="@+id/goods_detail_ll_suspension"
        android:layout_above="@+id/goods_detail_rl_bottom"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhkj.syyj.CustView.MeasureRelativeLayout
                android:id="@+id/goods_detail_top_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/goods_rl_top_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_192">

                <com.yyydjk.library.BannerLayout
                    android:id="@+id/goods_detail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_192"
                    app:autoPlayDuration="5000"
                    app:indicatorMargin="@dimen/dp_10"
                    app:indicatorPosition="centerBottom"
                    app:indicatorShape="oval"
                    app:indicatorSpace="5dp"
                    app:scrollDuration="1100"
                    app:selectedIndicatorColor="@color/text_efb134"
                    app:selectedIndicatorHeight="7dp"
                    app:selectedIndicatorWidth="7dp"
                    app:unSelectedIndicatorColor="@color/white"
                    app:unSelectedIndicatorHeight="7dp"
                    app:unSelectedIndicatorWidth="7dp" />
                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/ic_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34">
                    <TextView
                        android:id="@+id/goods_detail_tv_share"
                        android:layout_marginBottom="@dimen/dp_9"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="该商品支持转发卖货"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_12"
                        />

                    <Button
                        android:id="@+id/goods_detail_tv_forward"
                        android:background="@drawable/btn_yellow_left"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/sp_13"
                        android:text="转发卖货"
                        android:layout_width="@dimen/dp_93"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/goods_detail_tv_goodsTitle"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="商品标题最多两行超过省略号超过省略号商品标题最多两行超过省略号超过省......"
                android:textColor="#ff040000"
                android:textSize="16sp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22">
                <TextView
                    android:id="@+id/goods_detail_tv_goodsMoney"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="¥ 23.00"
                    android:textColor="@color/text_efb134"
                    android:textSize="@dimen/sp_16"
                    />
                <TextView
                    android:id="@+id/goods_detail_tv_goodsVolume"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="销量：500"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/colorLineDefault"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:id="@+id/goods_detail_forward"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:background="@drawable/myorder_choosed_color"
                        android:text="转发卖货"
                        android:textColor="@color/text_efb134"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:id="@+id/goods_detail_appraise"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:background="@drawable/myorder_nochoosed_color"
                        android:text="评价"
                        android:textColor="@color/text_fdfdfd"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:id="@+id/goods_detail_det"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:background="@drawable/myorder_nochoosed_color"
                        android:text="详情"
                        android:textColor="@color/text_fdfdfd"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50" />
                </RelativeLayout>
            </LinearLayout>
         </LinearLayout>
            </com.zhkj.syyj.CustView.MeasureRelativeLayout>
            <com.zhkj.syyj.CustView.MeasureRelativeLayout
                android:id="@+id/goods_detail_rl_official"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
             <TextView
                android:id="@+id/goods_detail_zfwa"
                android:lines="1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_black"
                android:text="转发文案"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.zhkj.syyj.CustView.MeasureTextView
                android:layout_below="@+id/goods_detail_zfwa"
                android:id="@+id/goods_detail_tv_copywriting"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:padding="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff040000"
                android:textSize="@dimen/sp_14"
                />
            </com.zhkj.syyj.CustView.MeasureRelativeLayout>
            <com.zhkj.syyj.CustView.MeasureRelativeLayout
                android:id="@+id/goods_detail_rl_appraise"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/goods_detail_tv_appraise"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:id="@+id/goods_detail_tv_view_all_appraise"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部 >"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12"
                    />
                <com.zhkj.syyj.CustView.CircleImageView
                    android:id="@+id/goods_detail_img_appraise"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@+id/goods_detail_tv_appraise"
                    android:src="@mipmap/spyj_logo"
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54" />

                <TextView
                    android:id="@+id/goods_detail_tv_appraise_name"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_38"
                    android:layout_below="@+id/goods_detail_tv_appraise"
                    android:layout_toRightOf="@+id/goods_detail_img_appraise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14"
                    />

                <com.zhkj.syyj.CustView.MeasureTextView
                    android:id="@+id/goods_detail_tv_appraise_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_below="@+id/goods_detail_tv_appraise_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/goods_detail_img_appraise"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text=""
                    android:textColor="#ff040000"
                    android:textSize="12sp"
                    />
            </com.zhkj.syyj.CustView.MeasureRelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图文详情"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                />
            <WebView
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/goods_detail_web_goods_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_50"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/goods_detail_rl_bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <ImageView
            android:id="@+id/goods_detail_img_home"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_home"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40" />
        <ImageView
            android:id="@+id/goods_img_call_center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_message"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40" />

        <ImageView
            android:id="@+id/goods_detail_img_collectGoods"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_collect"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40" />
        <Button
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/goods_detail_btn_redeem_now"
            android:background="@drawable/btn_enroll"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/text_fdfdfd"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_93"
            android:layout_height="@dimen/dp_40" />
        <Button
            android:id="@+id/goods_detail_btn_buynow"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_yellow"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_93"
            android:layout_height="@dimen/dp_40" />
    </LinearLayout>
</RelativeLayout>