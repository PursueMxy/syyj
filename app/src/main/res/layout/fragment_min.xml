<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MinFragment">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
       android:background="@mipmap/icon_topbg"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_marginTop="@dimen/dp_10"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_35">
           <TextView
               android:layout_centerHorizontal="true"
               android:text="我的"
               android:textColor="#FFFFFF"
               android:textSize="@dimen/sp_22"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/dp_35" />
       </RelativeLayout>
       <com.zhkj.syyj.CustView.CircleImageView
           android:id="@+id/fm_min_img_head"
           android:layout_marginTop="@dimen/dp_15"
           android:src="@mipmap/spyj_logo"
           android:layout_gravity="center"
           android:layout_width="@dimen/dp_82"
           android:layout_height="@dimen/dp_82"
           />
       <TextView
           android:id="@+id/fm_min_tv_username"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginTop="@dimen/dp_14"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="尚易优家"
           android:textColor="#ffffffff"
           android:textSize="18sp"
           />
       <TextView
           android:padding="@dimen/dp_8"
           android:background="@color/white"
           android:id="@+id/fm_min_tv_hy"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginTop="@dimen/dp_14"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="普通会员"
           android:textColor="#ffefb134"
           android:textSize="10sp"
           />
       <LinearLayout
           android:layout_marginTop="@dimen/dp_10"
           android:background="@drawable/bg_white"
           android:layout_marginLeft="@dimen/dp_24"
           android:layout_marginRight="@dimen/dp_24"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_85"
           android:orientation="horizontal">
         <RelativeLayout
             android:id="@+id/fm_min_my_balance"
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:layout_marginTop="@dimen/dp_15"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="余额"
                 android:textColor="#ff040000"
                 android:textSize="14sp"
                 />

             <TextView
                 android:id="@+id/fm_min_tv_user_money"
                 android:gravity="center"
                 android:layout_marginTop="@dimen/dp_52"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="￥0.00"
                 android:textColor="#ffefb134"
                 android:textSize="20sp"
                 />
         </RelativeLayout>
           <RelativeLayout
               android:id="@+id/fm_min_my_integral"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:layout_marginTop="@dimen/dp_15"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="积分"
                   android:textColor="#ff040000"
                   android:textSize="14sp"
                   />

               <TextView
                   android:id="@+id/fm_min_tv_level"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/dp_52"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="0"
                   android:textColor="#ffefb134"
                   android:textSize="20sp"
                   />
           </RelativeLayout>
       </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_top_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
             <LinearLayout
                 android:layout_marginLeft="@dimen/dp_10"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_100">
                 <RelativeLayout
                     android:id="@+id/fm_min_rel_my_order"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <ImageView
                         android:layout_centerInParent="true"
                         android:id="@+id/fm_min_img_order"
                         android:layout_marginTop="@dimen/dp_29"
                         android:src="@mipmap/icon_min_order"
                         android:layout_width="@dimen/dp_17"
                         android:layout_height="@dimen/dp_22" />

                     <TextView
                         android:layout_centerInParent="true"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_below="@+id/fm_min_img_order"
                         android:text="我的订单"
                         android:textColor="#ffefb134"
                         android:textSize="12sp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
                 <RelativeLayout
                     android:id="@+id/fm_min_rel_obligation"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <ImageView
                         android:layout_centerInParent="true"
                         android:id="@+id/fm_min_img_purse"
                         android:layout_marginTop="@dimen/dp_29"
                         android:src="@mipmap/icon_min_purse"
                         android:layout_width="@dimen/dp_17"
                         android:layout_height="@dimen/dp_22" />

                     <TextView
                         android:layout_centerInParent="true"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_below="@+id/fm_min_img_purse"
                         android:text="待付款"
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
                 <RelativeLayout
                     android:id="@+id/fm_min_rel_tobe_shipped"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <ImageView
                         android:layout_centerInParent="true"
                         android:id="@+id/fm_min_img_tobe_shipped"
                         android:layout_marginTop="@dimen/dp_29"
                         android:src="@mipmap/icon_min_tobe_shipped"
                         android:layout_width="@dimen/dp_17"
                         android:layout_height="@dimen/dp_22" />

                     <TextView
                         android:layout_centerInParent="true"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_below="@+id/fm_min_img_tobe_shipped"
                         android:text="待发货"
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
                 <RelativeLayout
                     android:id="@+id/fm_min_rel_tobe_received"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <ImageView
                         android:layout_centerInParent="true"
                         android:id="@+id/fm_min_img_tobe_received"
                         android:layout_marginTop="@dimen/dp_29"
                         android:src="@mipmap/icon_min_tobe_received"
                         android:layout_width="@dimen/dp_17"
                         android:layout_height="@dimen/dp_22" />

                     <TextView
                         android:layout_centerInParent="true"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_below="@+id/fm_min_img_tobe_received"
                         android:text="待收货"
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
                 <RelativeLayout
                     android:id="@+id/fm_min_rel_orderDone"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <ImageView
                         android:layout_centerInParent="true"
                         android:id="@+id/fm_min_img_orderover"
                         android:layout_marginTop="@dimen/dp_29"
                         android:src="@mipmap/icon_min_orderover"
                         android:layout_width="@dimen/dp_17"
                         android:layout_height="@dimen/dp_22" />

                     <TextView
                         android:layout_centerInParent="true"
                         android:layout_marginTop="@dimen/dp_10"
                         android:layout_below="@+id/fm_min_img_orderover"
                         android:text="已完成"
                         android:textColor="#ff949397"
                         android:textSize="12sp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
             </LinearLayout>
            <RelativeLayout
                android:id="@+id/fm_min_ll_member"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的会员"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />
                
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <RelativeLayout
                android:id="@+id/fm_min_shopping_address"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址管理"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <RelativeLayout
                android:id="@+id/fm_min_rl_collect"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <RelativeLayout
                android:id="@+id/fm_min_rel_task"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务中心"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <RelativeLayout
                android:id="@+id/fm_min_rl_coupon"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券中心"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <RelativeLayout
                android:id="@+id/fm_min_integarl"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_jinfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分中心"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <RelativeLayout
                android:id="@+id/fm_min_rl_news"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息中心"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <RelativeLayout
                android:id="@+id/fm_min_rl_set"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_min_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统设置"
                    android:textColor="#ff040000"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_next"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_14" />
            </RelativeLayout>

            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/text_fdfdfd"
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_height="0.3dp" />


        </LinearLayout>
   </LinearLayout>
    </ScrollView>
</FrameLayout>