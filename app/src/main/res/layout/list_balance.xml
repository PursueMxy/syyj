<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <TextView
       android:id="@+id/list_balance_dt"
       android:layout_margin="@dimen/dp_10"
       android:text="2019 09 02"
       android:textColor="@color/text_black"
       android:textSize="@dimen/sp_14"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/list_balance_money"
        android:layout_margin="@dimen/dp_10"
        android:text="300"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/list_balance_dt"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/list_balance_time"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="09 09 09"
        android:textColor="@color/text_fdfdfd"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_balance_dt"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/list_balance_type"
        android:layout_marginRight="@dimen/dp_10"
        android:text="充值"
        android:textColor="@color/text_fdfdfd"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
