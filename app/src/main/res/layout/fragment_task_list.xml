<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TaskListFragment">
    <LinearLayout
        android:background="#FFF5F5F5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_79">
          <ImageView
              android:id="@+id/fm_tasklist_img"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/dp_109"
              android:src="@mipmap/fm_tasklit_start"
              android:layout_width="@dimen/dp_68"
              android:layout_height="@dimen/dp_52" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/fm_tasklist_img"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="开始任务"
                android:textColor="#ff040000"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <com.zhouyou.recyclerview.XRecyclerView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/fm_tasklist_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.zhouyou.recyclerview.XRecyclerView>
    </LinearLayout>

</FrameLayout>