<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.GoodsListActivity">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:id="@+id/goods_list_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:id="@+id/goods_list_tv_title"
            android:layout_centerHorizontal="true"
            android:text="二级名称"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/myorder_choosed_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="全部"
                android:textColor="@color/text_efb134"
                android:textSize="@dimen/sp_16"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="销量"
                android:textColor="@color/text_949397"
                android:textSize="@dimen/sp_16"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/goods_list_top_price"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/text_949397"
                android:textSize="@dimen/sp_16"
                />
            <ImageView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_alignTop="@+id/goods_list_top_price"
                android:layout_toRightOf="@+id/goods_list_top_price"
                android:src="@mipmap/ic_upward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_alignBottom="@+id/goods_list_top_price"
                android:layout_toRightOf="@+id/goods_list_top_price"
                android:src="@mipmap/ic_downward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <com.zhouyou.recyclerview.XRecyclerView
        android:id="@+id/goods_detail_recyclerView"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>