<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.IntegralDetailActivity">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_high">
        <ImageView
            android:id="@+id/integral_detail_img_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_left"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:layout_centerHorizontal="true"
            android:text="积分明细"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorLineDefault"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhouyou.recyclerview.XRecyclerView
            android:background="@color/white"
            android:id="@+id/integral_detail_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.zhouyou.recyclerview.XRecyclerView>
    </RelativeLayout>
    <Button
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:id="@+id/integral_dtl_btn_redeem_now"
        android:background="@drawable/btn_yellow"
        android:gravity="center"
        android:text="取 现"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />
</RelativeLayout>